<main>
  <% if(orders.length <= 0) { %>
  <h1 class="centered">سبد خرید خالی است.</h1>
  <% } %>
  <ul class="cart__item-list">
    <% orders.forEach(order=>{ %>
    <li class="cart__item">
      <h1>شناسه سفارش: <%= order._id %></h1>
      <ul>
        <% order.products.forEach(p=>{ %>
        <li class="list-group-item">
          <%= p.product.title %> (<%= p.quantity %>)
        </li>
        <% }); %>
      </ul>
    </li>
    <% }); %>
  </ul>
</main>
